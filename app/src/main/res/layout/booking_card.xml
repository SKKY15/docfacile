<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Datee"
           android:id="@+id/date"
           android:layout_marginTop="10dp"
           android:layout_marginStart="10dp"
           android:textStyle="bold"
           android:textSize="18sp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1.5dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginTop="10dp"
           android:background="#E5E7EB"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:id="@+id/imgdoc2"
                android:src="@drawable/doc2"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Jessica Turner"
                    android:textColor="#000"
                    android:id="@+id/namedoc1"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E5E7EB"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardiologist"
                android:textColor="#4B5563"
                android:id="@+id/specialitydoc1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/location_street"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adressedoc1"
                    android:layout_marginStart="8dp"
                    android:text="Cardiology Center, USA"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:visibility="invisible"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/star_filled" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="5"
                    android:id="@+id/ratingdoc"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="#6B7280"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="#E5E7EB"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#6B7280"
                    android:layout_gravity="center"
                    android:id="@+id/reviewsdoc"
                    android:textStyle="bold"
                    android:text="1,872 Reviews"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="1.5dp"
           android:layout_margin="10dp"
           android:background="#E5E7EB"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="5dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_gravity="center"
           android:orientation="horizontal">
           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/bg_rounded_grey"
               android:textAllCaps="false"
               android:text="@string/rebook"
               android:layout_gravity="center"
               android:gravity="center"
               android:visibility="visible"
               android:textColor="#000"
               android:id="@+id/cancelrebook"
               android:layout_marginEnd="10dp"
               android:layout_weight="1"/>
           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="wrap_content"
               android:textAllCaps="false"
               android:text="@string/addrev"
               android:textColor="#fff"
               android:layout_gravity="center"
               android:gravity="center"
               android:visibility="visible"
               android:id="@+id/addreviewreshedule"
               android:background="@drawable/bg_button_next"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="24dp"
               android:layout_marginBottom="2dp"
               android:layout_gravity="center"
               android:padding="2dp"
               android:visibility="gone"
               android:id="@+id/starrs"
               android:gravity="center"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/star"
                   android:layout_marginLeft="2dp"
                   android:layout_marginVertical="2dp"
                   android:id="@+id/starrr1"
                   android:layout_marginRight="18dp"
                   />
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/star"
                   android:layout_marginLeft="2dp"
                   android:id="@+id/starrr2"
                   android:layout_marginVertical="2dp"
                   android:layout_marginRight="18dp"/>
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/star"
                   android:id="@+id/starrr3"
                   android:layout_marginLeft="2dp"
                   android:layout_marginVertical="2dp"
                   android:layout_marginRight="18dp"/>
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/star"
                   android:id="@+id/starrr4"
                   android:layout_marginLeft="2dp"
                   android:layout_marginVertical="2dp"
                   android:layout_marginRight="18dp"/>
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:id="@+id/starrr5"
                   android:src="@drawable/star"
                   android:layout_margin="2dp"/>
           </LinearLayout>

       </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>