<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MapsActivity">
<com.google.android.gms.maps.MapView
    android:layout_width="match_parent"
    android:id="@+id/mapView"
    android:layout_height="match_parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/searchinput1"
        android:focusable="true"
        android:clickable="true"
        android:elevation="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="@string/search_doctor"
        android:padding="10dp"
        android:drawableStart="@drawable/search_normal"
        android:drawablePadding="10dp"
        android:background="@drawable/style_input_search"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:overScrollMode="never"
        android:id="@+id/recc"
        android:paddingBottom="90dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dd"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="999dp"
        android:id="@+id/locateme"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/direct_up"
            />
    </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toTopOf="@id/navbarbottom"
      android:elevation="999dp"
      android:id="@+id/dd"
      android:visibility="gone"
      android:layout_margin="24dp"
      android:orientation="horizontal"
      app:cardCornerRadius="16dp"
      >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:background="#fff">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="12min / 4.2km"
          android:id="@+id/dandd"
          android:textColor="#1C2A3A"
          android:textStyle="bold"
          android:textSize="21sp"/>
      </LinearLayout>
  </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/navbarbottom"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/gohome"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_outlined"/>

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            app:cardCornerRadius="999dp"
        >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#F3F4F6"
                android:gravity="center"
                android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/location_solid"/>
</LinearLayout>
</androidx.cardview.widget.CardView>
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:id="@+id/clndr"
            android:scaleType="centerCrop"
            android:src="@drawable/calendar_bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/prfl"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_outlined"/>

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_open_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/openinmaps"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:layout_marginTop="24dp"
        android:elevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/searchinput1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>